<div class="container">
    {% if success is defined %}
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                <span aria-hidden="true">&times;</span>
            </button>
            <strong>Success !</strong> {{ success }}
        </div>
    {% endif %}
    {% if error is defined %}
        <div class="alert alert-danger alert-dismissible fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <strong>Error !</strong> {{ error }}
        </div>
    {% endif %}
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Notifications</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            {% if notifs|length %}
            <table class="table table-bordered">

                <tbody><tr>
                    <th style="width: 10px">#</th>
                    <th>Full Name</th>
                    <th>Stock Name</th>
                    <th>Date Send</th>
                    <th>Autorization</th>
                </tr>

                {% for notif in notifs %}

                    <tr>
                        <td></td>
                        <td>{{ notif.fullname }}</td>
                        <td>{{ notif.stock }}</td>
                        <td>{{ notif.date_create }}</td>
                        <td>
                            <button type="button" onclick='click_with_id("{{ path('sh_notif_addUser') }}","{{ notif.id }}")' class="btn btn-success">
                                <i class="fa fa-check">
                                </i>
                            </button>
                        </td>
                    </tr>

                {% endfor %}
                </tbody></table>
            {% else %}
            <div>
                <p>
                    No Notification !!!
                </p>
            </div>
            {% endif %}
        </div>
        <!-- /.box-body -->
    </div>
</div>