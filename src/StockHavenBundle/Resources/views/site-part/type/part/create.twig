<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div id="create" class="page-header">
                <br>
                {% if error is defined %}
                    <div class="alert alert-danger alert-dismissible fade in" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <strong>Error !</strong> {{ error }}
                    </div>
                {% endif %}
                {% if success is defined %}
                    <div class="alert alert-success alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <strong>Success !</strong> {{ success }}
                    </div>
                {% endif %}
                <h1>Create new Type<br>
                </h1>
                <div class="box box-primary">
                    <div class="box-header with-border">
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form action="#" id="form">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="Name">Name Type*</label>
                                <input type="text" class="form-control" name="name" placeholder="Enter Name" required>
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary" style="background-color: #605ca8;">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#form').submit(function(e) {
        e.preventDefault();
        post_form('{{ path('sh_type_create') }}',$(this).serialize());
    });
</script>