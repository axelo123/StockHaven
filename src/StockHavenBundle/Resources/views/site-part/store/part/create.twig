<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div id="create" class="page-header">
                <br>
                {% if error is defined %}
                    <div class="alert alert-danger alert-dismissible fade in" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <strong>Error !</strong> {{ error }}
                    </div>
                {% endif %}
                {% if success is defined %}
                    <div class="alert alert-success alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <strong>Success !</strong> {{ success }}
                    </div>
                {% endif %}
                <h1>Create new Store<br>
                </h1>
                <div class="box box-primary">
                    <div class="box-header with-border">
                    </div>
                    <form action="#" id="form">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="Name">Name Store*</label>
                                <input type="text" class="form-control" name="name" placeholder="Enter Name" required>
                            </div>
                            <div class="form-group">
                                <label for="Barcode">Picture</label>
                                <input type="file" id="picture" class="form-control" name="picture2">
                                <input type="text" id="axelo" name="picture" hidden>
                                <input type="text" id="op" name="fileName" hidden>
                            </div>
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary" style="background-color: #605ca8;">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#form').submit(function(e) {
        e.preventDefault();

        //console.log($("#picture")[0].files[0].name);
        var file = $("#picture")[0].files[0];
        var reader  = new FileReader();

        var parent = this;

        reader.onloadend = function () {
            $("#op").val(file.name);
            $("#axelo").val(reader.result);
            post_form_with_image('{{ path('sh_store_create') }}',$(parent).serialize());
            console.log('success');
        };

        if (file) {
            reader.readAsDataURL(file);
        }else{
            console.log('loolollol');
        }
       // post_form('{{ path('sh_store_create') }}',$(this).serialize());
    });
</script>