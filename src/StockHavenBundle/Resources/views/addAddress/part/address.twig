<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div id="create" class="page-header">
                <br>
                <h1>Add an Address<br>
                </h1>
                <div class="box box-primary">
                    <div class="box-header with-border">
                    </div>
                    <form action="#" id="form2">
                        <input type="number" id="store_id" name="store_id" value="{{ store.id }}" hidden>
                        <div class="box-body">
                            <div class="form-group">
                                <label for="nb_box" >nb box* : </label>
                                <input type="text" id="nb_box" name="nb_box" class="form-control" placeholder="Enter Number Box Ex.: 91"  required>
                                <label for="street">Street* : </label>
                                <input type="text" name="street" class="form-control" placeholder="Enter Street"  required>
                            </div>
                            <div class="form-group">
                                <label for="code" >Number Postal Code* : </label>
                                <input type="number" class="form-control" id="code" name="code" placeholder="Enter Number Postal Code Ex.: 1000" required>
                            </div>
                            <div class="form-group">
                                <label for="region" >Region* : </label>
                                <input type="text" class="form-control" id="region" name="region" placeholder="Enter Region Ex.: Bruxelles" required>
                            </div>
                            <div class="form-group">
                                <label for="country">Country* : </label>
                                <select class="form-control" id="country" name="country" required>
                                    {% for country in countries %}
                                        <option>{{ country.name }} {{ country.shortName }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary" style="background-color: #605ca8;">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#form2').submit(function(e) {
        e.preventDefault();
        post_form('{{ path('sh_store_add_address') }}',$(this).serialize());
    });
</script>