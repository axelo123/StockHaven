<br>
{% if success is defined %}
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong>Success !</strong> {{ success }}
    </div>
{% endif %}
{% if error is defined %}
    <div class="alert alert-danger alert-dismissible fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong>Error !</strong> {{ error }}
    </div>
{% endif %}
<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Stock</h3>
    </div>
    {% set quantity=0 %}
    {% for items in stock.stocksItems %}
        {% set quantity = items.quantity+quantity %}
    {% endfor %}
    <div class="box-body">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Name Stock</th>
                    <th>Owner</th>
                    <th>Number of Items in this Stock</th>
                    <th>Number User</th>
                </tr>
                <tr>
                    <td>{{ stock.name }}</td>
                    <td>{{ stock.userCreatorId.name }}</td>
                    <td>{{ quantity }}</td>
                    <td>{{ stock.users.count }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
    <!-- /.box-header -->

<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Items</h3>
    </div>
    <div class="box-body">
        <table class="table table-bordered">
            {% for item in items %}
            <tbody>
                <tr>
                    <th>Name Item</th>
                    <th>Price</th>
                    <th>Store</th>
                    <th>Number this Item in this Stock</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th>Add Item</th>
                </tr>
                <tr>
                    <td>{{ item.name }}</td>
                    <td>{{ item.price }}</td>
                    <td>{% for store in item.stores %}{{ store.name }} {% endfor %}</td>
                    <td>
                        {% for st in item.itemsStocks %}
                            {% if st.stockId.id == stock.id %}
                                {{ st.quantity }}
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td>{{ item.description }}</td>
                    <td>{{ item.typeId.name }}</td>
                    <td>
                        <button type="button" onclick='click_with_item_stock("{{ path('sh_stock_add_stock_in_item') }}","{{ item.id }}","{{ stock.id }}")' class="btn btn-success">
                            <i class="fa fa-plus">
                            </i>
                        </button>
                        <button type="button" onclick='click_with_item_stock("{{ path('sh_stock_remove_stock_in_item') }}","{{ item.id }}","{{ stock.id }}")' class="btn btn-danger">
                            <i class="fa fa-minus">
                            </i>
                        </button>
                    </td>
                </tr>
            </tbody>
            {% endfor %}
        </table>
    </div>

    <!-- /.box-body -->
    <div class="box-footer clearfix">
        <ul class="pagination pagination-sm no-margin pull-right">
            <li><a href="#">«</a></li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">»</a></li>
        </ul>
    </div>
</div>