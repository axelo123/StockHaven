<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div id="create" class="page-header">
                <br>
                <h1>Edit a Store<br>
                </h1>
                <div class="box box-primary">
                    <div class="box-header with-border">
                    </div>
                    <form action="#" id="form">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="Name">Name Store*</label>
                                <input name="store_id" value="{{ store.id }}" hidden>
                                <input type="text" class="form-control" name="name" value="{{ store.name }}" required>
                            </div>
                            <div class="form-group">
                                <label for="Barcode">Picture</label>
                                <input type="file" id="picture" class="form-control" name="picture2">
                                <input type="text" id="axelo" name="picture" hidden>
                                <input type="text" id="op" name="fileName" hidden>
                            </div>
                            <div class="form-group">
                                <img src='{{ asset(store.picture) }}' style="border:1px solid black;" width="145" height="145">
                            </div>
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary" style="background-color: #605ca8;">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#form').submit(function(e) {
        e.preventDefault();

        var file = $("#picture")[0].files[0];
        var reader  = new FileReader();

        var parent = this;

        reader.onloadend = function () {
            $("#op").val(file.name);
            $("#axelo").val(reader.result);
            post_form_with_image('{{ path('sh_store_edit') }}',$(parent).serialize());
            console.log('success');
        };

        if (file) {
            reader.readAsDataURL(file);
        }else{
            console.log('loolollol');
        }
    });
</script>